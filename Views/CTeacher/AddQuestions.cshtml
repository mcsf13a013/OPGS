        <td><textarea rows="12" cols="13" required placeholder="option D"></textarea></td>
        <td><select name="Sylabus" required>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
        </select></td>
        
<td><select name="pattern">
<option value="volvo">Easy Paper</option>
<option value="saab">Normal Paper </option>
<option value="saab">Tough Paper </option>
</select></td>
    </tbody>
   
</table>
        <input type="submit" value="Submit" />
    </form>
  

